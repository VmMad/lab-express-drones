<div class="container dronelist editing">
    <h2>Update the drone</h2>

    <br><br>
    <form action="/drones/{{_id}}/edit" method="post">
        <input type="hidden" name="_id" value="{{_id}}" >
        <label for="name">Name:</label> <br>
        <input type="text" name="name" value="{{name}}"> <br><br>
        <label for="maxSpeed">Max Speed:</label> <br>
        <input type="text" name="maxSpeed" value="{{maxSpeed}}"><br><br>
        <label for="propellers">Propellers:</label> <br>
        <input type="text" name="propellers" value="{{propellers}}"><br><br>
        <button class="btn btn-primary">
            UPDATE
        </button>
    </form>
</div>